{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/handler"
    },
    {
      "source": "/health",
      "destination": "/api/handler"
    },
    {
      "source": "/((?!api|health).*)",
      "destination": "/index.html"
    }
  ]
}
