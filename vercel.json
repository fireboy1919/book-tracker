{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "api/handler.go",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/handler" },
    { "src": "/health", "dest": "/api/handler" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
