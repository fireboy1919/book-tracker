{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "api/handler.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": "backend-go/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/handler"
    },
    {
      "src": "/health",
      "dest": "/api/handler"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
